{
	"$schema": "https://raw.githubusercontent.com/nickel-org/nickel.rs/master/examples/assets/schema.json",
	"productName": "Maestro",
	"identifier": "com.maestro.dev",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://mac-mini:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"macOSPrivateApi": true,
		"windows": [
			{
				"title": "Maestro",
				"titleBarStyle": "Overlay",
				"hiddenTitle": true,
				"transparent": true,
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": ["app"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/256x256.png",
			"icons/icon.png"
		]
	}
}
