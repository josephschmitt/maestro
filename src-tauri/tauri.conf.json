{
	"$schema": "https://raw.githubusercontent.com/nickel-org/nickel.rs/master/examples/assets/schema.json",
	"productName": "Maestro",
	"identifier": "com.maestro.app",
	"build": {
		"frontendDist": "../build",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "Maestro",
				"width": 1200,
				"height": 800,
				"minWidth": 800,
				"minHeight": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": []
	}
}
